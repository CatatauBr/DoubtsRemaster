<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoubtsRemaster</title>
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/global.css">
    <link rel="stylesheet" href="~/css/banner-rotativo.css">
    <link rel="stylesheet" href="~/css/cards.css">
    <link rel="stylesheet" href="~/css/atividade-forum.css">
</head>
<body>
    <div class="container">
        <header class="menu-principal">
            <div class="caixa-logotipo">
                <a href="#">
                    <img src="img/logo.png" alt="logotipo da catatau corp">
                </a>
            </div>

            <div class="hamburguer-menu">
                <div class="um"></div>
                <div class="dois"></div>
                <div class="tres"></div>
            </div>

            <div class="caixa-menu">
                <nav>
                    <ul>
                        <li><a href="#">Página Inicial</a></li>
                        <li><a href="#">Quem Somos</a></li>
                        <li><a href="#">Notícias</a></li>
                        <li><a href="#">Contato</a></li>
                    </ul>
                </nav>
            </div>
            
        </header>
        <div class="conteudo">
                @RenderBody()
        </div>

        <footer class="rodape">
            <div class="container-logotipo">
                <img src="img/logo.png" alt="" class="logotipo">
            </div>
            <div class="paragrafo">
                <p>Doubts Protection - Dicas de segurança | 2014 - | Todos os direitos reservados</p>
            </div>
        </footer>
    </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src=~/js/carossel.js></script>
        <script src="~/js/menu.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
